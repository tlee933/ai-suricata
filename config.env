# AI Suricata Configuration
# Edit these settings and restart the service: sudo systemctl restart ai-suricata

# pfSense connection
PFSENSE_HOST=192.168.1.1
PFSENSE_USER=admin

# AI Settings
AUTO_BLOCK=true          # Enable automatic blocking (true/false)
DRY_RUN=false            # Dry run mode - test without blocking (true/false)
TRAINING_EVENTS=3000     # Number of historical events for training

# Thresholds (future use)
CRITICAL_THRESHOLD=0.85
HIGH_THRESHOLD=0.70
MEDIUM_THRESHOLD=0.50

# Thermal Monitoring (pfSense CPU/System temperatures)
THERMAL_MONITORING=true       # Enable thermal sensor monitoring
THERMAL_POLL_INTERVAL=30      # Seconds between temperature checks
THERMAL_WARN_THRESHOLD=75     # Warning threshold in Celsius
THERMAL_CRITICAL_THRESHOLD=85 # Critical threshold in Celsius

# Monitoring
LOG_LEVEL=INFO

# Redis Configuration (Caching & Distributed State)
REDIS_ENABLED=true           # Enable Redis integration (true/false)
REDIS_HOST=localhost         # Redis server hostname
REDIS_PORT=6379              # Redis server port
REDIS_DB=0                   # Redis database number
REDIS_PASSWORD=              # Optional Redis password (empty for none)
REDIS_KEY_PREFIX=ai_suricata # Namespace prefix for all Redis keys
REDIS_SOCKET_TIMEOUT=2       # Connection timeout in seconds
REDIS_SOCKET_KEEPALIVE=true  # Enable TCP keepalive

# Message Queue Configuration (SSH Replacement)
MESSAGE_QUEUE_ENABLED=false          # DISABLED - causes 28% CPU overhead (was: true)
MESSAGE_QUEUE_CONSUMER_GROUP=ai-processors     # Consumer group for load balancing
MESSAGE_QUEUE_CONSUMER_NAME=ai-suricata-1      # Unique consumer name (change per instance)
MESSAGE_QUEUE_BLOCK_TIME_MS=1000               # XREAD block time in milliseconds
MESSAGE_QUEUE_BATCH_SIZE=10                    # Messages to read per batch
MESSAGE_QUEUE_USE_CONSUMER_GROUPS=true         # Use consumer groups for multi-instance (true/false)
